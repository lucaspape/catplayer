<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="de.lucaspape.monstercat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme" tools:ignore="GoogleAppIndexingWarning">

        <service android:name=".music.notification.PlayerService"
            android:enabled="true"
            android:exported="false" />

        <receiver android:name=".music.notification.NotificationIntentReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="de.lucaspape.monstercat.prev"/>
                <action android:name="de.lucaspape.monstercat.close"/>
                <action android:name="de.lucaspape.monstercat.playpause"/>
                <action android:name="de.lucaspape.monstercat.next"/>
            </intent-filter>
        </receiver>

        <activity
                android:name=".activities.MainActivity"
                android:theme="@style/AppTheme"
                android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.SettingsActivity"/>
        <activity android:name=".activities.PlayerFullscreenActivity"/>

    </application>

</manifest>